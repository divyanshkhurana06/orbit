# Orbit Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# SDK Integration Keys
# ========================================

# Yellow Network Configuration
YELLOW_API_KEY=your_yellow_api_key_here
YELLOW_NETWORK=testnet
YELLOW_ENABLED=true

# Avail Nexus SDK Configuration
AVAIL_NEXUS_API_KEY=your_avail_nexus_api_key_here
AVAIL_CHAIN_ID=1
AVAIL_ENABLED=true

# Blockscout Configuration
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here
BLOCKSCOUT_NETWORK=ethereum
BLOCKSCOUT_MCP_ENDPOINT=https://mcp.blockscout.com
BLOCKSCOUT_ENABLED=true

# ========================================
# Smart Contract Deployment
# ========================================

# Private Key for Deployment (DO NOT COMMIT!)
PRIVATE_KEY=your_private_key_here

# RPC URLs for Deployment
SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia.optimism.io
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Verification API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_API_KEY=your_optimism_api_key
BASESCAN_API_KEY=your_basescan_api_key

# CoinMarketCap API (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ========================================
# Application Configuration
# ========================================

APP_ENV=development
APP_PORT=8080

# Feature Flags
ENABLE_LOCATION_SHARING=true
ENABLE_PAYMENTS=true
ENABLE_CROSS_CHAIN=true
ENABLE_AI_SUMMARIES=true

# Debug Mode
DEBUG=false
LOG_LEVEL=info
REPORT_GAS=false

# ========================================
# Deployed Contract Addresses
# (Update these after deployment)
# ========================================

# Sepolia Testnet
SEPOLIA_GROUP_FACTORY=0x...
SEPOLIA_PAYMENT_SPLITTER=0x...
SEPOLIA_ORBIT_NFT=0x...

# Mumbai Testnet
MUMBAI_GROUP_FACTORY=0x...
MUMBAI_PAYMENT_SPLITTER=0x...
MUMBAI_ORBIT_NFT=0x...

